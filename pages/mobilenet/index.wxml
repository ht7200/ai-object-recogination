        </button> -->
        <cover-view class="toast" wx:if="{{visable}}" bindtap="WatchVideo">
          <cover-image class="popup" wx:if="{{toastData}}" src="{{toastData}}"></cover-image>
        </cover-view>
      </cover-view>
    </camera>
